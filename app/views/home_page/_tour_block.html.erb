<div class="col-md-4">
  <div class="tour">
    <%= link_to "#" do %>
      <% if tour.image.blank? %>
        <% tour.image = "tour-1.jpg" %>
      <% end %>
      <%= image_tag tour.image, class: "img-responsive" %>
    <% end %>
    <span class="rating"><%= t ".rating" %> <%= tour.rating %></span>
    <h3 class="tour-name"><%= link_to tour.name, tour %></h3>
    <p class="short-descrip">
      <%= tour.short_description %>
    </p>
  </div>
</div>
